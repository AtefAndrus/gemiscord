{
  "name": "gemiscord",
  "version": "1.0.0",
  "description": "A Discord bot that integrates Google's Gemini API with Function Calling and Brave Search API",
  "module": "src/bot.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun run src/bot.ts",
    "dev": "bun --watch run src/bot.ts",
    "typecheck": "tsc --noEmit",
    "lint": "tsc --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:unit": "bun test tests/unit",
    "test:integration": "bun test tests/integration",
    "test:ci": "bun test --coverage --bail",
    "test:verbose": "bun test --verbose"
  },
  "dependencies": {
    "@google/genai": "^1.6.0",
    "@keyv/sqlite": "^4.0.5",
    "discord.js": "14.20.0",
    "keyv": "^5.3.4",
    "yaml": "^2.8.0"
  },
  "devDependencies": {
    "@types/bun": "^1.2.17",
    "@types/node": "24.0.3",
    "typescript": "^5.8.3"
  },
  "engines": {
    "bun": ">=1.2.15"
  }
}
